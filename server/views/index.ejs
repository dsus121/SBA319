<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Let's Explore!</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 50px;
        }
        form {
            display: inline-block;
        }
        select {
            padding: 10px;
            margin: 10px;
            font-size: 16px;
        }
    </style>
</head>
<body>
    <h1>Let's Explore!</h1>
    <form>
        <label for="userSelect">Please select a USER:</label>
        <select id="userSelect" name="user" onchange="location = this.value;">
            <option value="" disabled selected>Select a user</option>
            <% users.forEach(user => { %>
                <option value="/user/<%= user._id %>"><%= user.name %></option>
            <% }) %>
        </select>
    </form>
    <script>
        document.getElementById('userSelect').addEventListener('change', function() {
            if (this.value) {
                window.location.href = this.value;
            }
        });
    </script>
</body>
</html>
